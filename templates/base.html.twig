    font-weight: bold;
}

.page-item.disabled .page-link {
    background-color: #e0e0e0;
    color: #bbb;
    pointer-events: none;
}

.page-link[aria-disabled="true"] {
    pointer-events: none;
    opacity: 0.5;
}

    </style>
</head>

